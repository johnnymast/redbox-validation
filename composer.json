{
  "name": "redbox/validator",
  "description": "https://github.com/johnnymast/redbox-validator",
  "keywords": ["php", "validation"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Johnny Mast",
      "email": "mastjohnny@gmail.com",
      "homepage": "https://github.com/johnnymast",
      "role": "lead"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "pestphp/pest": "^1.22",
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "^3.15"
  },
  "autoload": {
    "psr-4": {
      "Redbox\\Validation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Redbox\\Validation\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "pest --configuration phpunit.xml"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
